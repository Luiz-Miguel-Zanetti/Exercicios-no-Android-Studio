<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="@string/texto_aplicativo"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itTextTextPersonName"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/fundo_xml"
        android:ems="10"
        android:fontFamily="@font/baloo_bhaijaan"
        android:hint="Digite seu email:"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColorHint="#00BCD4"
        android:textSize="17dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ditTextTextPersonName"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/fundo_xml"
        android:ems="10"
        android:fontFamily="@font/baloo_bhaijaan"
        android:hint="Digite sua senha: "
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColorHint="#00BCD4"
        android:textSize="17dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itTextTextPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_xml"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="@string/texto_botÃ£o"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ditTextTextPersonName"
        app:layout_constraintVertical_bias="0.275"
        app:strokeColor="@color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_xml"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="Cadastrar-se"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ditTextTextPersonName"
        app:layout_constraintVertical_bias="0.521" />




</androidx.constraintlayout.widget.ConstraintLayout>